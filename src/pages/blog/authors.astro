---
import { getAuthorData, getAuthorUrl } from "../../lib/api"
import Layout from "../../layouts/Layout.astro"
import Heading from "../../components/Heading.astro"

const authors = getAuthorData()
const posts = await Astro.glob("./*.md")

// Filter out authors without any posts
const activeAuthors = authors.filter((author) => {
  const authorPosts = posts.filter(
    (post) => post.frontmatter.author === author.name
  )

  return authorPosts.length > 0
})

const title = `Blog Authors`
---

<Layout title={title}>
  <main class="max-w-4xl mx-auto">
    <Heading title={title} />
    <div
      class="mt-12 mb-24 max-w-lg mx-auto grid gap-5 lg:grid-cols-3 lg:max-w-none"
    >
      {
        activeAuthors.map((author) => (
          <div>
            <a href={getAuthorUrl(author.name)}>{author.name}</a>
          </div>
        ))
      }
    </div>
  </main>
</Layout>
