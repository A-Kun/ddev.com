---
export interface Props {
  title: string
  subtitle?: string
  date?: string
}

const { title, subtitle, date } = Astro.props
---

<div class="my-24">
  <h1 class="font-bold text-4xl">{title}</h1>
  {subtitle && <p class="text-2xl text-gray-600 my-4">{subtitle}</p>}
  {date && <p class="font-mono my-6">{date}</p>}
</div>
